USE CompanyDB;
Select * from Employees;
Select * from Departments ;

##################--------------INNER JOIN--------------##############
SELECT E.EmpID, E.EmpName,E.Salary ,D.DeptName, D.Location
FROM Employees E
INNER JOIN Departments D ON E.DeptID = D.DeptID;

##################--------------LEFT JOIN--------------##############
SELECT E.EmpName,D.DeptId, D.DeptName, D.Location
FROM Employees E
LEFT JOIN Departments D ON E.DeptID = D.DeptID;

##################------------RIGHT JOIN--------------##############.
SELECT E.EmpName,E.Empid, D.DeptName, D.Location
FROM Employees E
RIGHT JOIN Departments D ON E.DeptID = D.DeptID;


##################--------------FULL OUTER JOIN--------------##############
SELECT E.EmpName, E.Empid, D.Location
FROM Employees E
LEFT JOIN Departments D ON E.DeptID = D.DeptID
UNION 
SELECT E.EmpName, D.DeptName, D.Location
FROM Employees E
RIGHT JOIN Departments D ON E.DeptID = D.DeptID;
